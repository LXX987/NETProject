@page "/Order/{Id:int}/{num:int}"
@using BlazorApp.Data
@using BlazorApp.Service
@inject NavigationManager NavigationManager
@inject CommodityApiClient CommodityService
<h3 class="mb-5">订单</h3>
<div class="row">
    <div class="col-md-6">
        <p>支付成功</p>
    </div>
    <div class="col-md-6">
        <h4 class="mb-2">订单详情</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Product.total_count x @Product.commodity_name</td>
                    <td>@Product.item_price.ToString("C")</td>
                </tr>
                <tr>
                    <td><b>Total</b></td>
                    <td><b>@total_poice.ToString("C")</b></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public int num { get; set; }

    public int total_poice { get; set; }
    Commodity Product = new Commodity();
    protected override async Task OnInitializedAsync()
    {
        //Product.commodity_id = 1;
        //Product.commodity_name = "hhh";
        //Product.item_price = 10;
       // Product.total_count = 1;
        commodityItem Product1= await CommodityService.OrderCommodity(Id);
        Product.total_count = num;
        total_poice = num * Product1.item_price;
    }
}
